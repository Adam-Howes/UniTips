<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ViewContent.ViewContent">

    <ScrollView
        android:id="@+id/view_content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_content_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Post Title"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/view_content_posted_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Posted By"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/view_content_post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:text="Post Description"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/view_content_post_vote_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="Vote Count"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/view_content_post_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Post Date" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#50c0c0c0" />

            <ImageView
                android:id="@+id/view_content_image_view_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/view_content_description_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/view_content_image_view_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/view_content_description_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/view_content_image_view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/view_content_description_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/view_content_image_view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/view_content_description_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/view_content_image_view_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/view_content_description_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#50c0c0c0" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/view_content_recycler_view_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/view_content_add_comment_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:background="#FF7043"
                android:text="Add A Comment"
                android:textColor="#ffffff" />

            <EditText
                android:id="@+id/view_content_add_comment_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Comment"
                android:visibility="gone" />

            <Button
                android:id="@+id/view_content_post_comment_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:background="#FF7043"
                android:text="Post Comment"
                android:textColor="#ffffff"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>