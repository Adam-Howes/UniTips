<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unitips">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/unitipsbuttonlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/unitipsbuttonlogo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Favourites.Favourites"
            android:parentActivityName=".HomePage.HomePage"></activity>
        <activity
            android:name=".Report"
            android:parentActivityName=".HomePage.HomePage" />
        <activity android:name=".ViewProfile" />
        <activity android:name=".HomePage.HomePage" />
        <activity
            android:name=".CreateContent"
            android:parentActivityName=".HomePage.HomePage" />
        <activity
            android:name=".ViewContent.ViewContent"
            android:parentActivityName=".HomePage.HomePage" />
        <activity android:name=".SignUp2" />
        <activity android:name=".SignUp" />
        <activity android:name=".SignIn" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>