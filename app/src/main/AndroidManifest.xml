<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unitips">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/unitipsbuttonlogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/unitipsbuttonlogo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.UserSettings"></activity>
        <activity
            android:name=".Activities.Favourites"
            android:parentActivityName=".Activities.HomePage" />
        <activity
            android:name=".Activities.Report"
            android:parentActivityName=".Activities.HomePage" />
        <activity android:name=".Activities.ViewProfile" />
        <activity
            android:name=".Activities.HomePage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.CreateContent"
            android:parentActivityName=".Activities.HomePage" />
        <activity
            android:name=".Activities.ViewContent"
            android:parentActivityName=".Activities.HomePage" />
        <activity android:name=".Activities.SignUp2" />
        <activity android:name=".Activities.SignUp" />
        <activity android:name=".Activities.SignIn" />
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>